#ifndef BOUNDINGBOX_H_
#define BOUNDINGBOX_H_

#include <iostream>
#include <string>

using namespace std;

class BoundingBox {

public:
	BoundingBox();
	BoundingBox(double minLat, double minLong, double maxLat, double maxLong);
	BoundingBox(double width, double height);
	double translateLatitude(double latitude);
	double translateLongitude(double longitude);

private:
	double minLong;
	double minLat;
	double maxLong;
	double maxLat;
	double width;
	double height;

};

inline BoundingBox::BoundingBox() {
}

inline BoundingBox::BoundingBox(double minLat, double minLong, double maxLat,
		double maxLong) {
}

inline BoundingBox::BoundingBox(double width, double height) {
}

inline double BoundingBox::translateLatitude(double latitude) {
}

inline double BoundingBox::translateLongitude(double longitude) {
}



#endif /* BOUNDINGBOX_H_ */
